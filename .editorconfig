root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{php,latte}]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = true

[*.htaccess]
indent_style = tab
tab_width = 4

[*.neon]
indent_style = tab
tab_width = 4

[*.{js,less}]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2
